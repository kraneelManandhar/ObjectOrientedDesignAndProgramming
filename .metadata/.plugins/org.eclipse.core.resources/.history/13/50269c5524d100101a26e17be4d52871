    	if (level.equals("Beginner") || level.equals("Intermediate") || level.equals("Advanced")) {
            this.level = level;
        } else {
            System.out.println("Please enter Beginner , Intermediate or Advanced.");
        }
    }
   
    void setcountry(String country) {
    	this.country = country;
    }
    
